<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.movietime.dao.SeatDao">
    <select id="findByShowId" resultType="Seat">
        SELECT * FROM seat
        WHERE show_id = #{showId1}
    </select>

    <select id="findByShowIdAndLoc" resultType="Seat">
        SELECT * FROM seat
        WHERE show_id = #{showId2} AND row = #{row} AND col = #{col}
    </select>
</mapper>